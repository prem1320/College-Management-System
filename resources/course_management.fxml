<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ui.CourseManagementController"
            prefWidth="600" prefHeight="400">
    <children>
        <Label text="Course Management"
               layoutX="220" layoutY="10"
               style="-fx-font-size: 18; -fx-font-weight: bold;" />

        <TableView fx:id="courseTable"
                   layoutX="20" layoutY="50"
                   prefWidth="560" prefHeight="200">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                <TableColumn fx:id="nameColumn" text="Course Name" prefWidth="300"/>
                <TableColumn fx:id="durationColumn" text="Duration (Years)" prefWidth="200"/>
            </columns>
        </TableView>

        <Label text="Course Name:" layoutX="20" layoutY="270"/>
        <TextField fx:id="courseNameField" layoutX="120" layoutY="265" prefWidth="200"/>

        <Label text="Duration:" layoutX="340" layoutY="270"/>
        <TextField fx:id="durationField" layoutX="410" layoutY="265" prefWidth="50"/>

        <Button text="Add" layoutX="20" layoutY="320" onAction="#handleAdd"/>
        <Button text="Update" layoutX="80" layoutY="320" onAction="#handleUpdate"/>
        <Button text="Delete" layoutX="160" layoutY="320" onAction="#handleDelete"/>
        <Button text="Refresh" layoutX="240" layoutY="320" onAction="#handleRefresh"/>
    </children>
</AnchorPane>