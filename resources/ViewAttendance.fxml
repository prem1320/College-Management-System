<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ui.ViewAttendanceController"
      spacing="20"
      alignment="TOP_CENTER"
      prefWidth="650"
      prefHeight="500">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label text="Attendance Records"
           style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

    <TableView fx:id="attendanceTable"
           prefHeight="400"
           prefWidth="600">
           
    <columnResizePolicy>
        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
    </columnResizePolicy>
    
    <columns>
        <TableColumn text="Roll Number" fx:id="rollNumberColumn"/>
        <TableColumn text="Date" fx:id="dateColumn"/>
        <TableColumn text="Status" fx:id="statusColumn"/>
    </columns>
</TableView>
    <Button text="Back to Dashboard"
            onAction="#handleBack"
            fx:id= "backButton"
            prefWidth="200"/>
</VBox>