<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ui.FacultyDashboardController"
      alignment="CENTER"
      spacing="20"
      prefWidth="400"
      prefHeight="500"
      styleClass="container">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <Text text="Faculty Dashboard" styleClass="dashboard-title"/>

    <Button text="Add Students"
            onAction="#handleAddStudents"
            styleClass="primary-button"/>

    <Button text="Add Grades"
            onAction="#handleAddGrades"
            styleClass="primary-button"/>

    <Button text="Add Attendance"
            onAction="#handleAddAttendance"
            styleClass="primary-button"/>

    <Button text="Manage Assignments"
            onAction="#handleManageAssignments"
            styleClass="primary-button"/>
            
    <Button text="Manage Courses" onAction="#handleManageCourses"/>

    <Button text="Logout"
            onAction="#handleLogout"
            styleClass="secondary-button"/>
</VBox>